#include<iostream>
using namespace std;

int main()
{
	int var;
	int *ptr; //declaration of pointer variable
	
	var=20;
	ptr = &var; //we put the address of var into ptr variable
	
	//assign the address of a variable to a pointer 
	cout <<"Value at ptr = "<<ptr <<"\n";
	cout <<"Value at var =  " <<var<<"\n";
	cout <<"Value at *ptr = "<<*ptr<<"\n";
	
	return 0;
}
